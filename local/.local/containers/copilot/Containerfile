FROM node:20-bookworm-slim

# Install tools
RUN apt-get update && apt-get install -y \
    git \
    ripgrep \
    && rm -rf /var/lib/apt/lists/*

# Install GitHub Copilot CLI via npm
RUN npm install -g @github/copilot

# Create workspace directory
RUN mkdir -p /workspace

WORKDIR /workspace

ENTRYPOINT ["copilot"]
CMD []
